#! /bin/sh

pgrep -x sxhkd >/dev/null || sxhkd &
# pgrep -x polybar > /dev/null || polybar &
$HOME/.config/polybar/launch.sh
setxkbmap us -variant alt-intl
xrandr --output DP-4 --mode 5120x1440 --rate 60
xrandr --output HDMI-0 --mode 1920x1080 --rate 60 --left-of DP-4
xset s off
xset -dpms
pgrep -x feh >/dev/null || feh --bg-scale ~/Pictures/Wallpaper/Ultrawide/SimonStalenhag/wallhaven-lm1z2l.jpg &
pgrep -x picom >/dev/null || picom --config ~/.config/picom/picom.conf &
pgrep -x dunst >/dev/null || dunst &
pgrep -x fcitx5 >/dev/null || fcitx5 -d &
pgrep -x 1password >/dev/null || 1password &
pgrep -x solaar >/dev/null || solaar &
pgrep -x ckb-next >/dev/null || ckb-next &

# Configuration Ã©cran virtuel
bspc monitor -f HDMI-0
bspc monitor -d LeftI LeftII LeftIII LeftIV

bspc monitor -f DP-4
bspc monitor -d MainI MainII MainIII MainIV

bspc config border_width 3
bspc config focused_border_color "#ff79c6"

bspc config split_ratio 0.50
bspc config borderless_monocle true
bspc config gapless_monocle true
bspc config automatic_scheme spiral
